{
  "name": "stockforumx",
  "version": "1.0.0",
  "description": "Real-time stock discussion and prediction platform with accuracy-based reputation",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspaces --if-present",
    "lint": "echo 'Linting not configured yet' && exit 0",
    "test": "npm test --workspaces --if-present",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server"
  },
  "keywords": [
    "stock",
    "forum",
    "predictions",
    "mern",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}